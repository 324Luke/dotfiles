#!/bin/sh

# Author:        Luke Whrit <lukewhrit@gmail.com> (https://github.com/lukewhrit)
# Description:   When called, returns a Kanye West quote via https://kanye.rest.
# Requiremennts: curl, jq

make_request () {
  curl api.kanye.rest -s | jq '.quote' -r
}

print_quote () {
  echo "$(make_request)"
}

pad_request () {
  cat <<eof

    "$(make_request)"
            -- Kanye West ðŸŒŠ
eof
}

log_version () {
  echo 'kanye.sh 0.1.0'
}

print_usage () {
  cat <<eof
  usage: kanye [-hvpq]

  flags:
    -q: Print a kanye west quote.
    -p: Dictates whether the quote will be padded
    -h: Prints program usage information
    -v: Prints program version

  Created by Luke Whrit <lukewhrit@gmail.com>.

  ðŸŒŠ stay wavy
eof
}

while getopts 'hvpq' flag; do
  case "${flag}" in
    p) pad_request ;;
    v) log_version ;;
    h) print_usage ;;
    q) print_quote ;;
    *) exit 1      ;;
  esac
done
