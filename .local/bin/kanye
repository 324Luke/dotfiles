#!/bin/sh

# Author:        Luke Whrit <lukewhrit@gmail.com> (https://github.com/lukewhrit)
# Description:   When called, returns a Kanye West quote via https://kanye.rest.
# Requiremennts: curl

make_request () {
  curl "api.kanye.rest?format=text" -s
}

pad_request () {
  cat <<eof

    "$(make_request)"
            -- Kanye West ðŸŒŠ

eof
}

log_version () {
  echo 'kanye.sh 1.0.0'
}

print_usage () {
  cat <<eof
  usage: kanye [-hvp]

  flags:
    -p: Dictates whether the quote will be padded.
    -h: Prints program usage information.
    -v: Prints program version.

  Created by Luke Whrit <lukewhrit@gmail.com>, Powered by https://kanye.rest.

  ðŸŒŠ stay wavy
eof
}

if [ "$#" -eq 0 ]; then
  printf '%s \n' "$(make_request)"
  exit 1
fi

while getopts 'hvpq' flag; do
  case "${flag}" in
    p) pad_request ;;
    v) log_version ;;
    h) print_usage ;;
    *) exit 1      ;;
  esac
done
